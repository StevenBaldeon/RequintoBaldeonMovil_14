<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RequintoBaldeonMovil.Views.ResenaPage">

    <!--<ContentPage.BindingContext>
        <viewModels:ResenaViewModel />
    </ContentPage.BindingContext>-->

    <ContentPage.Content>
        <Grid>

            <!-- Fondo de pantalla -->
            <Image Source="Background_resena.jpg" Aspect="AspectFill" />
            <BoxView Color="White" Opacity="0.4" />

            <!-- Usar un StackLayout para organizar los elementos -->
            <StackLayout Padding="20">

                <!-- Agregar un Frame para el fondo con el texto vinculado -->
                <Frame BackgroundColor="LightGray" CornerRadius="10" Margin="0,0,0,20">
                    <Label Text="{Binding Texto}" HorizontalOptions="Center" VerticalOptions="Center" />
                </Frame>

                <!-- Otros elementos de la página aquí -->

            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>


